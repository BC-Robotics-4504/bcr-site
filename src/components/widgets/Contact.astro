---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// ðŸ‘‡ your teamâ€™s inbox
const TO_EMAIL = 'bcrobotics4504@gmail.com';

// sensible defaults if props not passed
const safeInputs = inputs ?? [
  { type: 'text', name: 'name', label: 'Name', required: true },
  { type: 'email', name: 'email', label: 'Email', required: true },
];
const safeTextarea = textarea ?? { label: 'Message', name: 'message', required: true, rows: 6 };
const safeButton = button ?? 'Send Email';
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {safeInputs && (
    <div
      class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full"
    >
      <!-- ðŸ‘‡ form wrapper keeps original styling intact -->
      <form id="mailto-form" class="space-y-6" data-to={TO_EMAIL}>
        <FormContainer
          inputs={safeInputs}
          textarea={safeTextarea}
          disclaimer={disclaimer}
          button={safeButton}
          description={description}
        />
      </form>
    </div>
  )}
</WidgetWrapper>

<!-- External client-side script -->
<script type="module" src="/scripts/contact-mailto.js"></script>
