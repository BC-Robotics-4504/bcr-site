---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'About Us' };

const heroImage = {
  src: '~/assets/images/robot-hero.jpg',
  alt: 'BC Robotics Team 4504 robot on the field',
};
const gridImage = {
  src: '~/assets/images/team-photo.jpg',
  alt: 'BC Robotics students collaborating in the shop',
};
---

<Layout metadata={metadata}>
  <Hero tagline="About Us" image={heroImage}>
    <Fragment slot="title">
      FIRST Robotics Team <span class="text-accent dark:text-white">4504 — Blount County Robotics</span>
    </Fragment>
    <Fragment slot="subtitle">
      We are a student-led, mentor-supported <strong>FIRST Robotics Competition</strong> team based in
      <strong>Blount County, Tennessee</strong>. Our mission is to inspire young people to become
      science and technology leaders through hands-on engineering, coding, and community outreach.
      Each season we design, build, and program a 120-lb robot to compete across the region—while
      growing leadership, teamwork, and real-world problem-solving skills.
    </Fragment>
  </Hero>

  <Stats
    title="What we do — at a glance"
    stats={[
      { title: 'Students Each Season', amount: '40+' },
      { title: 'Mentors & Coaches', amount: '10+' },
      { title: 'Outreach Audience / Year', amount: '1,500+' },
      { title: 'Events & Competitions', amount: '5–7' },
    ]}
  />

  <Features3
    title="How our team is organized"
    subtitle="Students pick a subteam, learn by doing, and ship together."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Mechanical',
        description: 'CAD to comp: mechanisms, drivetrains, prototyping, fabrication, assembly, pit operations.',
        icon: 'tabler:tools',
      },
      {
        title: 'Electrical & Controls',
        description: 'REV/CTRE wiring, power distribution, sensors, pneumatics, CAN, reliability & safety.',
        icon: 'tabler:device-analytics', // valid
      },
      {
        title: 'Software',
        description: 'WPILib, command-based, PathPlanner autos, vision, testing, CI, and match logging.',
        icon: 'tabler:code', // valid
      },
    ]}
  />

  <!-- ↓ This is where it likely broke before: swap to safe icons -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Onshape + MKCad',
        description: 'Cloud CAD for collaborative design reviews and fast iteration from kickoff to comp.',
        icon: 'tabler:cube', // safe
      },
      {
        title: 'REV / CTRE Ecosystem',
        description: 'Modern FRC control hardware for precise motion, robust wiring, and serviceability.',
        icon: 'tabler:cpu', // was circuit-battery → use cpu (safe)
      },
      {
        title: 'WPILib + PathPlanner',
        description: 'Clean command-based architecture and repeatable auto paths that score reliably.',
        icon: 'tabler:steering-wheel', // safe
      },
      {
        title: 'GitHub + CI',
        description: 'Code reviews, style checks, artifacts, and releases to keep the robot software shippable.',
        icon: 'tabler:brand-github', // safe
      },
      {
        title: 'Shop & Field Practice',
        description: 'Prototyping, driver practice, pit drills, and checklists to perform under pressure.',
        icon: 'tabler:settings', // replace settings-cog → settings (safe)
      },
      {
        title: 'Outreach & Media',
        description: 'STEM demos at schools and community events, plus docs, photos, and social updates.',
        icon: 'tabler:phone', // safe
      },
    ]}
    image={gridImage}
  />

  <Steps2
    title="Our build season process"
    subtitle="From kickoff to competition, we iterate quickly and learn continuously."
    items={[
      { title: 'Kickoff & Strategy', description: 'Break down the game, set priorities, and define a simple, effective MVP.' },
      { title: 'Design & Prototyping', description: 'Rapid prototypes inform CAD; validate mechanisms before manufacture.' },
      { title: 'Integrate, Test, Iterate', description: 'Bring subsystems together, run autos, log data, and improve reliability.' },
    ]}
  />

  <Steps2
    title="Impact beyond the robot"
    subtitle="We’re here to grow people, not just points."
    isReversed={true}
    callToAction={{ text: 'See our sponsors', href: '/sponsor' }}
    items={[
      { title: 'Community Outreach', description: 'Demos and hands-on STEM across Blount County and East Tennessee.', icon: 'tabler:heart-handshake' },
      { title: 'Student Leadership', description: 'Students lead subteams, run stand-ups, manage budgets, and document.', icon: 'tabler:users' },
      { title: 'College & Careers', description: 'Alumni pursue engineering, CS, and trades with strong portfolios.', icon: 'tabler:school' },
    ]}
  />

  <Features2
    title="Where to find us"
    tagline="Blount County, Tennessee"
    columns={3}
    items={[
      { title: 'Build & Meetings', description: 'Team meetings during the school year and build season in Blount County, TN.' },
      { title: 'Events & Demos', description: 'Follow our site and socials for event dates and demo appearances.' },
      { title: 'Contact', description: 'Email bcrobotics4504@gmail.com to join, mentor, or sponsor.' },
    ]}
  />

  <Features2
    title="Get involved"
    tagline="Join the mission"
    columns={2}
    items={[
      { title: 'Students & Mentors', description: 'No experience required—mechanical, electrical, software, business, media.', icon: 'tabler:message-plus' },
      { title: 'Sponsors & Partners', description: 'Back local STEM. Multiple sponsor tiers and in-kind support options.', icon: 'tabler:puzzle' },
    ]}
  />
</Layout>
