---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Blount County Robotics • FRC Team 4504',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero ******************* -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Join the Team', href: '/join', icon: 'tabler:rocket' },
      { text: 'Sponsor Us', href: '/sponsors', icon: 'tabler:currency-dollar' },
      { text: 'Watch Matches', href: 'https://www.thebluealliance.com/team/4504', target: '_blank', icon: 'tabler:player-play' },
    ]}
    image={{ src: '~/assets/images/robot-2025.png', alt: 'Team 4504 robot' }}
  >
    <Fragment slot="title">
      Blount County Robotics — <span class="text-accent dark:text-white">FRC Team 4504</span>
    </Fragment>

    <Fragment slot="subtitle">
      We’re a student-led FIRST® Robotics Competition team building competitive robots,
      growing STEM leaders, and serving our community in Blount County, TN.
    </Fragment>
  </Hero>

  <!-- Mission **************** -->
  <Note
    title="Our Mission"
    description="Inspire young people to become science & technology leaders by engaging them in mentor-guided, student-run engineering, outreach, and business."
  />

  <!-- What we offer ********** -->
  <Features
    id="features"
    tagline="Programs"
    title="Build robots. Build leaders."
    subtitle="No experience required — we teach everything from the ground up."
    items={[
      {
        title: 'Mechanical & CAD',
        description: 'Design in Onshape, prototype parts, manufacture with mills, lathes, and 3D printers.',
        icon: 'tabler:tools',
      },
      {
        title: 'Electrical & Controls',
        description: 'Wire robots safely, crimp like a pro, configure REV/CTR hardware, and keep it competition-ready.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Software & Strategy',
        description: 'Java/RobotPy codebase, command-based, path planning, vision, scouting, and match strategy.',
        icon: 'tabler:code',
      },
      {
        title: 'Business & Media',
        description: 'Branding, social, sponsor relations, grant writing, photography, and event logistics.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Community Outreach',
        description: 'STEM demos at schools & libraries, summer camps, and volunteer initiatives.',
        icon: 'tabler:users',
      },
      {
        title: 'Leadership',
        description: 'Student project management, subteam leads, documentation, and continuous improvement.',
        icon: 'tabler:chart-dots',
      },
    ]}
  />

  <!-- Season flow ************ -->
  <Content
    isReversed
    tagline="The Season"
    title="From kickoff to champs"
    items={[
      { title: 'Kickoff (Jan)', description: 'Game reveal, rules deep-dive, and early strategy.' },
      { title: 'Design → Build (Jan–Feb)', description: 'CAD, fabrication, wiring, programming, and testing.' },
      { title: 'Competition (Mar–Apr)', description: 'Qualifiers, playoffs, scouting, and rapid iteration.' },
    ]}
    image={{ src: '~/assets/images/pit-shot.jpg', alt: 'Team 4504 in the pit' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Iterate fast. Document always.</h3>
      We plan, prototype, test, and improve quickly — capturing everything so next season starts stronger.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Get involved *********** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Students',
        description: 'Grades 9–12 in Blount County. Pick a subteam (or three). Learn by doing.',
      },
      {
        title: 'Mentors',
        description: 'Engineering, software, business, media — a few hours a week makes a huge impact.',
      },
      {
        title: 'Sponsors',
        description: 'Fuel student innovation. Support with funds, materials, machining, or mentorship.',
      },
      {
        title: 'Alumni & Volunteers',
        description: 'Stay connected — events, reviews, and off-season projects always need hands.',
      },
    ]}
    image={{ src: '~/assets/images/outreach.jpg', alt: 'Community outreach demo' }}
  >
    <Fragment slot="content">
      Want in? Check <a class="text-blue-600 underline" href="/calendar">our calendar</a> or hit <a class="text-blue-600 underline" href="/contact">contact</a>.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Tools/stack ************ -->
  <Content
    isReversed
    isAfterContent
    items={[
      { title: 'Onshape + MKCad', description: 'Cloud CAD that keeps everyone on the same page.' },
      { title: 'REV / CTRE Ecosystem', description: 'Modern FRC electronics and motion control.' },
      { title: 'WPILib + PathPlanner', description: 'Command-based control and clean auto paths.' },
      { title: 'GitHub + CI', description: 'Code reviews, style checks, docs, and releases.' },
    ]}
    image={{ src: '~/assets/images/code-screenshot.png', alt: 'Robot code screenshot' }}
  >
    <Fragment slot="content">Professional tools, student friendly workflow.</Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- How to join ************ -->
  <Steps
    title="How to join Team 4504"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Say hi</span>',
        description: 'Fill out the interest form and swing by a meeting to check things out.',
        icon: 'tabler:message',
      },
      {
        title: 'Step 2: <span class="font-medium">Pick a subteam</span>',
        description: 'Mechanical, electrical, software, business, or media — try a few!',
        icon: 'tabler:selector',
      },
      {
        title: 'Step 3: <span class="font-medium">Start building</span>',
        description: 'Get a buddy, grab a task, and ship your first PR or part.',
        icon: 'tabler:package-export',
      },
      { title: 'You’re in!', icon: 'tabler:check' },
    ]}
    image={{ src: '~/assets/images/workshop.jpg', alt: 'Students working in the shop' }}
  />

  <!-- Highlights grid ******** -->
  <Features2
    title="Team highlights"
    subtitle="What makes 4504 special"
    tagline="Highlights"
    items={[
      {
        title: 'Robots',
        description: 'See this season’s robot, reveal video, and behind-the-scenes.',
        icon: 'tabler:brand-android',
      },
      {
        title: 'Awards',
        description: 'Our history at regional events and judged awards.',
        icon: 'tabler:medal',
      },
      {
        title: 'Safety',
        description: 'Training, tool certifications, and pit procedures.',
        icon: 'tabler:heart',
      },
      {
        title: 'Media',
        description: 'Photos, match footage, and social links.',
        icon: 'tabler:library-photo',
      },
      {
        title: 'Docs',
        description: 'Open subteam handbooks, style guides, and checklists.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Contact',
        description: 'Questions? Want a demo at your school or event? Reach out.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Calendar',
        description: 'Meetings, outreach events, and competition dates.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Sponsors',
        description: 'Sponsor tiers and benefits — grab our packet.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Alumni',
        description: 'Where our grads head next and how they give back.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Blog/updates *********** -->
  <BlogLatestPosts
    title="Latest Updates"
    information={`Build logs, competition recaps, and technical deep dives from students and mentors.`}
  />

  <!-- FAQs ******************* -->
  <FAQs
    title="FAQs"
    subtitle="New here? Start with these."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Who can join?',
        description: 'High school students in Blount County. No prior experience required.',
      },
      {
        title: 'Time commitment?',
        description: 'Off-season: 1–2 days/week. Build season: 2–4 days/week plus events.',
      },
      {
        title: 'Cost to participate?',
        description: 'We keep dues low thanks to sponsors. Need-based assistance available.',
      },
      {
        title: 'Do I need experience?',
        description: 'Nope. We teach CAD, coding, tools, safety, and project workflow.',
      },
      {
        title: 'How do I sponsor?',
        description: 'See /sponsors for tier benefits and our 501(c)(3) info, or email us.',
      },
      {
        title: 'When/where do you meet?',
        description: 'Check /calendar — preseason workshops and regular meetings are posted there.',
      },
    ]}
  />

  <!-- Stats ****************** -->
  <Stats
    stats={[
      { title: 'Students', amount: '35+' },
      { title: 'Mentors', amount: '10+' },
      { title: 'Outreach Hours (yr)', amount: '400+' },
      { title: 'Sponsors', amount: '25+' },
    ]}
  />

  <!-- CTA ******************** -->
  <CallToAction
    actions={[
      { variant: 'primary', text: 'Sponsor Packet (PDF)', href: '/files/4504-sponsor-packet.pdf', icon: 'tabler:file-dollar' },
      { text: 'Donate', href: '/donate', icon: 'tabler:heart' },
    ]}
  >
    <Fragment slot="title">
      Support <span class="sm:whitespace-nowrap">Team 4504</span>
    </Fragment>

    <Fragment slot="subtitle">
      Your support funds parts, tools, travel, and outreach — and opens doors for local students.
    </Fragment>
  </CallToAction>
</Layout>
